syntax on

set statusline=\ \%f%m%r%h%w\ \%=\ [%p%%:\ %l/%L]\ 
highlight StatusLine ctermfg=black ctermbg=black

set nocompatible
set ruler
set hidden
set tabstop=3
set shiftwidth=3
set nonumber
set wildmode=list:longest
set smartindent
set autoindent
set laststatus=2
set linespace=2
set splitbelow
set hlsearch
set viminfo=""
set t_Co=256
set mouse=a
set shortmess=filnxToOI

filetype plugin on
filetype indent on
